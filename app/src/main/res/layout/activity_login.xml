<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/flayer"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/resim"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/etalogo" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="75dp"
                android:background="#FFF"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_email_24dp" />

                <EditText
                    android:textSize="10sp"
                    android:id="@+id/emailgiris"
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:hint="E-Posta"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#006BD1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_https_24dp" />

                <EditText
                    android:id="@+id/emailpassword"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="#006BD1"
                    android:fontFamily="serif"
                    android:hint="Şifre"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textColorHint="#CCC"
                    android:textStyle="bold" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/benihatirla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:hint="Beni Hatırla"
                android:textSize="20sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/giris_yap"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="#006BD1"
                android:fontFamily="serif"
                android:text="GİRİŞ YAP"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"


                />

            <Button
                android:id="@+id/kayit_ol"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#006BD1"
                android:fontFamily="serif"
                android:text="Kayıt Ol"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>